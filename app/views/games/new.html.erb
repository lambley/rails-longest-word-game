<h1>Create the longest possible word!</h1>
<hr>
<% @letters.each do |letter|%>
  <%= letter.upcase %>
<% end %>
<hr>
<h2>Current high score: <strong><%= @high_score.to_i %></strong></h2>
<form action="score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="word">Your word:</label>
  <input type="text" id="word" name="word">
  <%= hidden_field_tag :grid, @letters %>
  <%= hidden_field_tag :start_time, @start_time %>
  <%= hidden_field_tag :high_score, @high_score %>
  <input type="submit" value="submit">
</form>
